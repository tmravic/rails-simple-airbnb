<div class="card-trip my-3">
  <% if flat.photo.attached? %>
    <%= image_tag flat.photo %>
  <% end %>
  <div class="card-trip-infos">
    <div>
      <h2><%= flat.name %></h2>
      <p><%= flat.address %></p>
      <p><%= flat.description %></p>
      <div class="d-flex justify-content-start">
        <h6 class="mx-2 pt-2"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></h6>
        <h6 class="mx-2 pt-2"><i class="fas fa-dollar-sign"></i> <%= flat.price_per_night %></h6>
      </div>
    </div>
  </div>
  <div class="flat-card-actions py-2 text-center">
    <%= link_to "More info", flat_path(flat) %>
  </div>
</div>
