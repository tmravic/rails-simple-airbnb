<% simple_form_for @flat do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <br>
  <%= f.input :photo, as: :file %>
  <br>
  <%= f.button :submit, "Add flat", class: "btn btn-success" %>
<% end %>
